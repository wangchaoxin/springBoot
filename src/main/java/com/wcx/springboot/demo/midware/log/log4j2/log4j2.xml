<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="basePath">/app/logs</Property>
    </Properties>

    <Appenders>
        <RollingFile name="fileLogger" fileName="${basePath}/app-info.log" filePattern="${basePath}/app-info-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>

        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <!--设置各个包的日志级别，指定包命前缀即可-->
        <Logger name="org.apache.zookeeper" level="error" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="com.rabbitmq" level="error" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="org.apache.curator" level="error" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="com.ncs.vit.vms.file.service" level="debug" additivity="true">
            <appender-ref ref="fileLogger" level="info" />
        </Logger>
        <Root level="info" additivity="false">
            <appender-ref ref="console" />
        </Root>

    </Loggers>
</Configuration>